

<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="banner banner-flat" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= image_path flat.banner %>'); background-position: center;">
</div>

<div class="header-flat padded text">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-details">
          <div class="flat-owner text-center">
            <%= image_tag flat.owner_picture, class: "img-circle avatar-team-large" %>
            <p><%= flat.owner_name %></p>
          </div>
          <div class="flat-name">
            <h4><%= flat.description %></h4>
            <p><%= flat.city %></p>
          <% flat.rating.times do %>
            <i class="fa fa-star" style="color: #FFB400"></i>
          <% end %>
          <% (5 - flat.rating).times do %>
            <i class="fa fa-star" style="color: #cacccd"></i>
          <% end %>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-4">
        <div class="form-flat padded">
          <h4>Book this flat</h4>
          <div class="form-group">
            <form action="">
            <div class="row">
              <div class="col-xs-6">
                <input type="date" placeholder="check-in" class="form-control">
              </div>
              <div class="col-xs-6">
                <input type="date" placeholder="check-out" class="form-control">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <div class="form-group">
            <button type="button" class="btn btn-danger btn-flat">
              Book It
            </button>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

